{
  "name": "crm-top-construtora-backend",
  "version": "1.0.0",
  "description": "API Backend para CRM TOP Construtora",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "echo 'Build step completed'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "generate-jwt": "node generate-jwt-secret.js"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "crm",
    "construtora",
    "api",
    "backend",
    "supabase",
    "express"
  ],
  "author": "TOP Construtora",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@supabase/supabase-js": "^2.50.2",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.6.1",
    "exceljs": "^4.4.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "express-slow-down": "^2.1.0",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.4",
    "pdfkit": "^0.17.1",
    "socket.io": "^4.8.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@express-rate-limit/tsconfig": "^1.0.2",
    "jest": "^30.0.3",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.1"
  },
  "optionalDependencies": {
    "express-redis-cache": "^1.1.3",
    "pg": "^8.16.2",
    "postgres": "^3.4.7",
    "redis": "^5.5.6"
  },
  "nodemonConfig": {
    "watch": [
      "src/",
      "server.js"
    ],
    "ext": "js",
    "ignore": [
      "src/**/*.test.js",
      "node_modules/"
    ],
    "delay": 1000,
    "env": {
      "NODE_ENV": "development"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  }
}
